html
  head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')

  body
    nav(class="navbar navbar-light bg-faded")
    ul.nav.nav-tabs
      li.active(role='presentation')
        a(href='/index') Create
      li(role='presentation')
        a(href='/messages') Messages

    .container
      .row
        .col-xs-6.offset-xs-3
          h1.text-xl-center BB-App
          hr
          form(action="create" method='post' class= "form" name= "message")
            .form-group
              label Title:
              input(type="text" name='title' placeholder="Type a title" autocomplete="off" class="form-control")
            .form-group
              label Body:
              input(type="text" name="body" placeholder="Type a message" autocomplete="off" class="form-control")
            .form-group
              button(type="submit" class="btn btn-success btn-lg btn-") Post Message
        
